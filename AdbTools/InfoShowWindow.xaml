<Window x:Class="AdbTools.InfoShowWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AdbTools"
        mc:Ignorable="d"
        Title="信息" Height="450" Width="560" FontSize="16" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded">
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
            <TextBox x:Name="message" Margin="10" IsReadOnly="True"  TextWrapping="Wrap" BorderThickness="0" Background="Transparent" />
        </ScrollViewer>
    </Grid>
</Window>
